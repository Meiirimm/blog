<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('partials/head.ejs')%>
    <title>Document</title>
</head>
<body>
    <%-include('partials/header.ejs')%>
    <div class="container">
        <form action="/api/signup" method="POST" class="form">
            <h3>Регистрация</h3>
            <fieldset class="fieldset">
                <input type="email" placeholder="Введите email" name="email">
            </fieldset>
            <fieldset class="fieldset">
                <input type="text" placeholder="Введите полное имя"  name="full_name">
            </fieldset>
            <!-- <fieldset class="fieldset fieldset-file"><input type="file" name="image" class="custom-file-input" placeholder="Выберите картинку"></fieldset> -->

            <fieldset class="fieldset">
                <input type="password" placeholder="Введите пароль" name="password">
            </fieldset>
            <fieldset class="fieldset">
                <input type="password" placeholder="Подтвердите пароль" name="re_password">
            </fieldset>
            <fieldset class="fieldset"><button type="submit">Зарегистрироваться</button></fieldset>
        </form>

    </div>
    <script src="https://kit.fontawesome.com/0869a7851e.js" crossorigin="anonymous"></script>
</body>
</html>